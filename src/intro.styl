section#intro

  background var(--blue)
  color white
  
  .logotype
    display none

  .wrapper
    display flex
    align-items center
    justify-content center
    flex-direction column
    max-width 1000px
    // padding-top 100px
    height 500px
    margin 0 auto

  h1
    font-size 48px
    text-align center
    font-weight normal

  .cta
    display none
    
  & + .wave
    width 100%
    height 20vh
    margin-bottom -50px
    // Fix weird white line between the background and the wave
    margin-top -1px
  
  .logo svg
    height 150px


@media (max-width 1000px)
  section#intro
  
    .wrapper
      margin 0 1em
  
    h1
      font-size 34px

@media (max-width 500px)
  section#intro
    
    .logotype
      display block
    
    .wrapper
      padding-top 0
      margin 0 1em
    
    h1
      font-size 24px
    
    & + .wave
      margin-bottom 20px
    
    .cta
      display inline-block


section#cta
  
  color white
  
  .wave
    margin-bottom -10px
  
  .wrapper
    background-color: var(--blue)
    display flex
    flex-direction column
    align-items center
    padding 10vh 0
  
  h2
    text-align center
    font-size 54px
    @media (max-width 500px)
      font-size 24px

section#open-source
  
  @media (max-width 1000px)
    margin 0 1.5em
  
  .centered-wrapper
    display flex
    align-items center
    flex-direction column
  
  .keyhole
    height 10vh
    fill var(--green)
    opacity 0.25
  
  h2
    text-align center
    font-size 54px
    @media (max-width 500px)
      font-size 24px

  h3
    text-align left
    font-size 34px
    // font-weight 600
    opacity 0.25
    @media (max-width 500px)
      font-size 14px
  
  .github-link
    font-size 34px
    @media (max-width 500px)
      font-size 24px
    color var(--blue)
    font-family IBM Plex Mono, monospace
    // Center
    display flex
    justify-content center
  .github-link:hover
    color var(--blue-dark)
  
  p a
    border-bottom 1px solid black
  p a:hover
    color var(--blue)
    border-color var(--blue)

  